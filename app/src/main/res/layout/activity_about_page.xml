<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AboutPage">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/logo"
        android:scaleType="centerCrop"
        android:id="@+id/appLogoImage"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/aboutEmail"
        app:layout_constraintTop_toBottomOf="@id/appLogoImage"
        android:padding="15dp"
        android:background="?attr/selectableItemBackground"
        android:focusable="true"
        android:clickable="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:text="Email: musahesenli02@gmail.com"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/aboutEmail"
        android:padding="15dp"
        android:background="?attr/selectableItemBackground"
        android:focusable="true"
        android:clickable="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:text="Phone number: +994559779778"
        android:id="@+id/aboutPhoneNumber"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"

        app:layout_constraintTop_toBottomOf="@+id/aboutPhoneNumber"
        style="@style/Divider"
        android:id="@+id/divider"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        android:padding="15dp"
        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries"
        />
</androidx.constraintlayout.widget.ConstraintLayout>