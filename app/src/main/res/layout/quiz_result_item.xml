<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="10dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/hello_blank_fragment"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textSize="17sp"
            android:id="@+id/quiz_result_name"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/quiz_result_name"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Right answers"
            android:layout_marginTop="5dp"

            android:textColor="@color/appPrimary"
            android:paddingVertical="5dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            app:layout_constraintTop_toBottomOf="@id/quiz_result_name"
            app:layout_constraintRight_toRightOf="parent"
            android:text="21"
            android:layout_marginTop="5dp"
            android:textColor="@color/appPrimary"
            android:id="@+id/rightAnswerCount"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/rightAnswerCount"
            app:layout_constraintLeft_toLeftOf="parent"
            android:paddingVertical="5dp"
            android:layout_marginTop="5dp"
            android:text="Wrong answers"
            android:textColor="#ff0000"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wrongAnswerCount"
            app:layout_constraintTop_toBottomOf="@+id/rightAnswerCount"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingVertical="5dp"
            android:layout_marginTop="5dp"
            android:text="3"
            android:textColor="#ff0000"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/wrongAnswerCount"
            style="@style/Divider"
            android:id="@+id/divider"
            android:layout_marginVertical="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            android:paddingVertical="5dp"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Total point"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingVertical="5dp"
            android:layout_marginTop="5dp"
            android:text="78"
            android:id="@+id/totalPointText"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>